@using FitBuddy.API.Helper.DTO.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ResetPasswordDTO
<!DOCTYPE html>
<html>
<head>
	<title>Reset Password</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="icon" href="~/Logo.png">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<!-- Custom Theme files -->
	<link href="~/css/_AuthLayout.css" rel="stylesheet" type="text/css" media="all" />
	<!-- //Custom Theme files -->
	<!-- web font -->
	<link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
	<!-- //web font -->
</head>
<body>
	<!-- main -->
	<div class="main-w3layouts wrapper">
		<div class="main-agileinfo">
			<div class="agileits-top" style="background-color: #a09cbc;">
				<form asp-action="ResetPassword">
					<div asp-validation-summary="ModelOnly" class="alert-danger"></div>
					<div>

					<input class="text" asp-for="NewPassword" placeholder="Password" required="">
					<span asp-validation-for="NewPassword"></span>
					</div>
					<div>
						<br />
					<input class="text" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
					<span asp-validation-for="ConfirmPassword"></span>
					</div>
					<div class="wthree-text text">

						<div class="clear"> </div>
					</div>
					<input type="submit" value="Update Password">
				</form>

			</div>
		</div>
		<div class="App-agile">
			<p>© 2025 FitBuddy Team. All rights reserved</p>
		</div>
		<ul class="App-bubbles">
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
		</ul>
	</div>
	<!-- //main -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>